generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
}

// ─── Provider Enum ────────────────────────────────────────────────
enum ChatProvider {
  chatgpt
  gemini
  claude
}

// ─── Tracks which providers a user has synced ─────────────────────
model SyncProvider {
  id         String       @id @default(uuid())
  userId     String       @map("user_id")
  provider   ChatProvider
  syncedAt   DateTime     @default(now()) @map("synced_at")
  lastSyncAt DateTime?    @map("last_sync_at")
  isActive   Boolean      @default(true) @map("is_active")

  @@unique([userId, provider])
  @@map("sync_providers")
}

// ─── Unified Conversations (One row per chat) ─────────────────────
// We consolidate multiple message rows into a single JSON field
model ChatgptConversation {
  id         String   @id @default(uuid())
  userId     String   @map("user_id")
  externalId String?  @unique @map("external_id")
  title      String
  messages   Json     @default("[]") // Stores {role, content} array
  imported   Boolean  @default(false)
  createdAt  DateTime @default(now()) @map("created_at")

  @@index([userId])
  @@map("chatgpt_conversations")
}

model GeminiConversation {
  id         String   @id @default(uuid())
  userId     String   @map("user_id")
  externalId String?  @unique @map("external_id")
  title      String
  messages   Json     @default("[]")
  imported   Boolean  @default(false)
  createdAt  DateTime @default(now()) @map("created_at")

  @@index([userId])
  @@map("gemini_conversations")
}

model ClaudeConversation {
  id         String   @id @default(uuid())
  userId     String   @map("user_id")
  externalId String?  @unique @map("external_id")
  title      String
  messages   Json     @default("[]")
  imported   Boolean  @default(false)
  createdAt  DateTime @default(now()) @map("created_at")

  @@index([userId])
  @@map("claude_conversations")
}

// ─── Unified Summaries (cross-provider) ──────────────────────────
model ConversationSummary {
  id             String       @id @default(uuid())
  userId         String       @map("user_id")
  provider       ChatProvider
  conversationId String       @map("conversation_id")
  summary        String
  modelUsed      String       @map("model_used")
  vectorized     Boolean      @default(false)
  createdAt      DateTime     @default(now()) @map("created_at")

  @@index([userId, provider])
  @@index([conversationId])
  @@map("conversation_summaries")
}

model TopicSummary {
  id        String        @id @default(uuid())
  userId    String        @map("user_id")
  provider  ChatProvider?
  topic     String
  summary   String
  createdAt DateTime      @default(now()) @map("created_at")

  @@index([userId])
  @@map("topic_summaries")
}

model UserApiKey {
  id        String   @id @default(uuid())
  userId    String   @map("user_id")
  key       String   @unique
  createdAt DateTime @default(now()) @map("created_at")

  @@map("user_api_keys")
}
